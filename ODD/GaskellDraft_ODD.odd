  <text>
    <body>
      <schemaSpec ident="oddex1" start="TEI">
        <moduleRef key="header"/>
        <moduleRef key="core"/>
        <moduleRef key="tei"/>
        <moduleRef key="textstructure"/>
        <moduleRef key="transcr"/>
        <moduleRef key="msdescription"/>
        <moduleRef key="namesdates"/>
        
  <!-- TEI ODD Guidance and SAMPLE ODD FILES to consult: https://github.com/ebeshero/DHClass-Hub/wiki/TEI-ODD:-Schema-Prep-Resources-for-TEI-in-Projects 
  
  Assignment: Write an XSLT that pulls attribute data from your personography file and outputs this ODD file with the appropriate valItems.
  --> 
        <elementSpec ident="person" module="namesdates" mode="change">
          <attList>
            <attDef ident="xml:id">
              <valList type="closed">
              <valItem ident="idWhatever"/>
              
              
            </valList>
            </attDef>
            
          </attList>
          
          
          
        </elementSpec>
        
        
        <elementSpec ident="persName" module="namesdates" mode="change">
          <attList>
            <attDef ident="ref" mode="replace" usage="rec">
              <datatype>
                <rng:text/>
              </datatype>
              <valList type="closed">
                <valItem ident="#idWhatever"/>
                <valItem ident="#Bint_Hannah">
                  <gloss>Bint Hannah | b. 1804-09-16 | Daughter of Thomas Bint and Sarah Bint. Baptismal and family data as recorded by</gloss>
                </valItem>
              </valList>
            </attDef>
          </attList>
        </elementSpec>
        
      </schemaSpec>
    </body>
  </text>
</TEI>



